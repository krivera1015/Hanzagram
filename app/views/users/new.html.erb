<div class="sign-up-background"></div>

<div class="registration-bg">

  <div class="container">

    <div class="row">

      <div class="col-md-12">

        <div class="log-in panel">

          <div class="panel-heading">

            <h2 id="sign-up-h2">Create Your Account</h2>

          </div>

          <%= form_for(@user) do |f| %>

            <div class="panel-body">
              <div class="input-lg" id="sign-up-username"><%= f.label :username %></div>
              <div class="input-lg"><%= f.text_field :username %></div>

              <div class="input-lg" id="sign-up-password"><%= f.label :password %></div>
              <div class="input-lg"><%= f.password_field :password %></div>

              <div class="btn-sm"><%= f.submit "Sign Up!" %></div>
              <div class="btn-sm"> <%= f.button link_to "Log In", login_path %></div>

            </div>

          <% end %>

      </div>

    </div>

  </div>

</div>

</div>
