<div class="registration-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="log-in panel">
          <div class="panel-heading">
            <h2>Create Your Account</h2>
          </div>
          <%=form_for(@user) do |f| %>
            <div class="panel-body">
              <%= f.text_field :username, required: true, label: false, placeholder: 'User Name', input_html: { class: 'input-lg' } %>
              <%= f.password_field :password, required: true, label: false, placeholder: 'Password', input_html: { class: 'input-lg' } %>
              <%= f.password_field :password_confirmation, required: true, label: false, placeholder: 'Confirm Password', input_html: { class: 'input-lg' } %>
              <%= f.submit "Sign Up!" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
