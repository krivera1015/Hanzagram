<%= form_for @user, url: "/#{@user.username}", method: :patch do |f| %>
<h4>Change your profile image:</h4>
  <% profile_avatar(@user) %>
  <%= f.file_field :avatar %>
    <h4>Update your bio:</h4>
      <%= f.text_area :bio, rows: 4 %>
      <%= f.submit "Update Profile", :class => 'btn btn-primary' %>
<% end %>
